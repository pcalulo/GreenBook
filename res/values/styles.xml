<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/GreenBookActionBar</item>
    </style>

    <style name="GreenBookActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/bg_branded</item>
    </style>
    
    <style name="StandardTextStyle">
        <item name="android:textColor">@color/text_standard</item>
    </style>

    <!-- Project details fragment styles -->
    <style name="HeadingStyleBase">
        <item name="android:textColor">@color/text_standard</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HeadingStyle" parent="HeadingStyleBase">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NavigationDrawerTextStyle">
        <item name="android:textColor">@color/text_standard</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="TransparentButtonStyle">
        <item name="android:textColor">@color/text_standard</item>
        <item name="android:background">@drawable/list_item_selector</item>
    </style>

</resources>